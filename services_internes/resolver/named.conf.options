options {
        directory "/var/cache/bind";

        allow-recursion {
                127.0.0.1/32;
                172.16.0.0/24;
                192.168.1.0/24;
                192.168.2.0/24;
                192.168.3.0/24;
                192.168.4.0/24;
                192.168.5.0/24;

        };

        // Configure the IPs to listen on here.
        listen-on { 
                127.0.0.1;
                172.16.0.1;
        };
        listen-on port 53 { any; };
        listen-on-v6 { none; };
};



