options {
        directory "/var/cache/bind";

        allow-recursion {
                192.168.0.0/24;
                127.0.0.1/32;
        };

        // Configure the IPs to listen on here.
        listen-on { any; };
        listen-on-v6 { none; };

        pid-file "/var/run/named/named.pid";
        allow-transfer { none; };
	dnssec-enable no;
	dnssec-validation no;

};
